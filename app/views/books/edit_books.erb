<h1>Book Info</h1>
<p>name:<%=@book.name%></p>
<p>author:<%=@book.author%></p>
<% @book.comments.each do |c| %>
  <p>comment:<%= c.comment%></p>
<% end %>
<% @book.sentences.each do |s| %>
  <p>sentence:<%= s.sentence%></p>
<% end %>

<h2>Edit..</h2>
<form  action="/books/<%=@book.id%>/edit" method="post">
   <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="name">name: </label>
  <input type="text" name="name" placeholder="name(title)" id="name"><br><br>
  <label for="author">author: </label>
  <input type="text" name="author" placeholder="author" id="author"><br><br>
  <label for="comment">comment: </label>
  <input type="text" name="comment" placeholder="comment" id="comment"><br><br>
  <label for="name">sentence: </label>
  <input type="text" name="sentence" placeholder="sentence" id="sentence"><br><br>
  <br>
  <p>..or add other comments</p>
  <p><input type="text" name="comment2"></p><br>
  <p><input type="text" name="comment3"></p><br>
  <p><input type="text" name="comment4"></p><br>
  <p><input type="text" name="comment5"></p><br>
  <p>..or add other sentences</p>
  <p><input type="text" name="sentence2"></p><br>
  <p><input type="text" name="sentence3"></p><br>
  <p><input type="text" name="sentence4"></p><br>
  <p><input type="text" name="sentence5"></p><br>


  <input type="submit" name="submit" value="submit">

</form>
